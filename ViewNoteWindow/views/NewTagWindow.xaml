<Window x:Class="ViewNoteWindow.NewTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:local="clr-namespace:ViewNoteWindow"
        mc:Ignorable="d"
        Title="New Tag Window" Height="120" Width="300"
        Name="newTagWindows">
    <Grid Name="infoNewTag">
        <StackPanel>
            <xctk:WatermarkTextBox Name="tagName" FontSize="14" Width="280" Margin="5" 
                                   TextChanged="tagName_TextChanged"
                                   Watermark="Enter tag name..."></xctk:WatermarkTextBox>
            <WrapPanel>
                <Button Content="OK" Margin="180,20,0,0" Width="40" Click="Button_Click"/>
                <Button Content="Cancel" Margin="20,20,0,0" Width="40" Click="Button_Click_1"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
