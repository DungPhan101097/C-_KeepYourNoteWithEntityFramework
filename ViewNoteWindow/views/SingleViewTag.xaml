<UserControl x:Class="ViewNoteWindow.SingleViewTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewNoteWindow"
             mc:Ignorable="d" 
             Name="singleViewContainer"
             Margin="10,20,10,0">
    <Grid Name="singleViewTag" >
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Name="lbTitle" 
               Grid.Row="0" Foreground="#FF1DD414" FontWeight="Bold" FontSize="14"/>
            <ListBox Name="lbxTags" 
                 Grid.Row="1"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,5,0,0" SelectionChanged="lbxTags_SelectionChanged" 
                 />
        </Grid>

</UserControl>
